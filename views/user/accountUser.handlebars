    <div class="feed">
        <h1 class="title">{{userData.name}} posts</h1>
        {{#if posts}}
        <div class="posts">
            {{#each posts}}
            <div class="post">
                <div class="postControl">
                    <h3 class="postTitle">{{this.title}}</h3>
                </div>
                {{#if this.image}}
                <img src="{{this.image}}" alt="Image" class="postImage">
                {{/if}}
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="posts">
            <h3 class="noPosts">No posts yet!</h3>
        </div>
        {{/if}}
